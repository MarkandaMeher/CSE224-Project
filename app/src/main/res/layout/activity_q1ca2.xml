<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Q1ca2"
    android:background="@android:color/holo_red_light"
    >



    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10dp"
        app:civ_shadow_color="@android:color/holo_red_light"

        />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_below="@+id/imageView"

        android:background="@drawable/cr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/Rl1"

        >

        <Button
            android:id="@+id/Login"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:text="Log in"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/Signup"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/Login"
            android:backgroundTint="@color/white"
            android:text="Sign Up"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Rl1"
        android:id="@+id/Rl2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/twitter"
            android:backgroundTint="#00000000"
            android:id="@+id/twitter"
            android:layout_alignParentStart="true"

            />
        <ImageButton
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/fb"
            android:backgroundTint="#00000000"
            android:id="@+id/fb"
            />
        <ImageButton
            android:layout_alignParentEnd="true"
            android:id="@+id/google"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/google3"
            android:backgroundTint="#00000000"
            android:scaleType="fitXY"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textColor="@color/black"
        android:layout_below="@+id/Rl2"
        android:layout_centerHorizontal="true"
        android:textSize="19dp"
        android:id="@+id/Or"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name / Email address"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Or"
        android:textSize="20dp"
        android:id="@+id/UserView"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserView"
        android:id="@+id/UserName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="text"
        android:hint="Eg. vkpanday789@gmail.com"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserName"
        android:layout_centerHorizontal="true"
        android:text="Password"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:id="@+id/PassView"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PassView"
        android:id="@+id/Password"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="numberPassword"
        android:hint="Eg. 12345"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:layout_below="@+id/Password"
        android:layout_marginLeft="25dp"
        android:id="@+id/RememberMe"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="265dp"
        android:layout_height="54dp"
        android:text="Done"
        android:layout_below="@+id/RememberMe"
        android:layout_centerHorizontal="true"
        android:id="@+id/Done"
        android:background="@drawable/cr"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:layout_below="@+id/Done"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:id="@+id/ForgetPassword"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        />
</RelativeLayout>